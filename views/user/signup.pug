doctype html
html(lang='en')
    include ../common/head.pug
    +head("Sign up to Starter MVP")
    body
        header
            include ../common/navbar.pug
            +navbar()
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Registrer
                            .row
                                .col-sm-12.col-md-12
                                    form(action='/signup', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Email:
                                            input(placeholder='Indtast venligst din email', required=true, name='email', type='email', value=formData.email).form-control
                                            if (errors && errors.email)
                                                p.small.text-danger #{errors.email}
                                            label.small.mb-1.mt-3 Password:
                                            input(placeholder='Ny adgangskode', required=true, name='password', type='password', value='').form-control
                                            if (errors && errors.password)
                                                p.small.text-danger #{errors.password}
                                            button.mt-3.btn.btn-primary(type='submit') Registrer
                                            p.mt-2.mb-0
                                                | Har du allerede en bruger? #[a(href="/login") Log ind].

        include ../common/footer.pug
        +footer()