//Opretter form til lånet
doctype html
html(lang='en')
    include ../common/head
    +head("Lån")
    body
        header
            include ../common/navbar
            +navbar()
            .container
                .row.align-items-center
                    .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
                        h1 Loan
                        table.table
                            thead
                                tr
                                    th(scope="col") Email
                                    th(scope="col") Edit
                                    th(scope="col") Delete
                                tr
                            tbody
                                tr(id=loan.id)
                                    td
                                        span #{loan.email},
                                        span #{loan.number},
                                        span #{loan.text},
                                        span #{loan.number1},
                                        span #{loan.number2}
                                    td
                                        a(href="/loan/" + loan.id + "/edit") Rediger
                                    td
                                        form(action="/loan/" + loan.id + "/delete", method="POST")
                                            button(type="submit").btn.btn-primary Slet
        include ../common/footer
        +footer()
        script(src='/javascripts/loans.js')